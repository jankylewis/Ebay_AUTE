<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Search Songs Tests"
       parallel="tests"
       thread-count="9">

    <!--region Successful searches -->

    <test name="SWSEARCH_01">
        <classes>
            <class name="se.spo.gui.SearchSongTest">
                <methods>
                    <include name="spotifyUiTest_verifyUserSearchedSongsSuccessfullyAtAllTab"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name="SWSEARCH_02">
        <classes>
            <class name="se.spo.gui.SearchSongTest">
                <methods>
                    <include name="spotifyUiTest_verifyUserSearchedSongsSuccessfullyAtArtistsTab"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name="SWSEARCH_03">
        <classes>
            <class name="se.spo.gui.SearchSongTest">
                <methods>
                    <include name="spotifyUiTest_verifyUserSearchedSongsSuccessfullyAtSongsTab"></include>
