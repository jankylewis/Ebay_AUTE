            </class>
        </classes>
    </test>

    <test name="SWSEARCH_04">
        <classes>
            <class name="se.spo.gui.SearchSongTest">
                <methods>
                    <include name="spotifyUiTest_verifyUserSearchedSongsSuccessfullyAtPlaylistsTab"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name="SWSEARCH_05">
        <classes>
            <class name="se.spo.gui.SearchSongTest">
                <methods>
                    <include name="spotifyUiTest_verifyUserSearchedSongsSuccessfullyAtAlbumsTab"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name="SWSEARCH_06">
        <classes>
            <class name="se.spo.gui.SearchSongTest">
                <methods>
                    <include name="spotifyUiTest_verifyUserSearchedSongsSuccessfullyAtPodcastsAndShowsTab"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name="SWSEARCH_07">
        <classes>
            <class name="se.spo.gui.SearchSongTest">
                <methods>
                    <include name="spotifyUiTest_verifyUserSearchedSongsSuccessfullyAtGenresAndMoodsTab"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name="SWSEARCH_08">
        <classes>
            <class name="se.spo.gui.SearchSongTest">
                <methods>
                    <include name="spotifyUiTest_verifyUserSearchedSongsSuccessfullyAtProfilesTab"></include>
                </methods>
            </class>
        </classes>
    </test>

    <!--endregion-->

    <test name="SWSEARCH_09">
        <classes>
            <class name="se.spo.gui.SearchSongTest">
                <methods>
                    <include name="spotifyUiTest_verifyUserSearchedSongsUnsuccessfullyAtPodcastsAndShowsTab"></include>
                </methods>
            </class>
        </classes>
    </test>

</suite>