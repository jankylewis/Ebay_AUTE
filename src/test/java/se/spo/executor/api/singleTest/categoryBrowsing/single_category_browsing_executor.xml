<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="API Test > Category Browsing Tests"
       parallel="tests"
       thread-count="3">

    <test name="SASINGLEBROWSECATEGORIES_01">
        <classes>
            <class name="se.spo.api.categoryBrowsingTest.SingleCategoryBrowsingTest">
                <methods>
                    <include name="spotifyApiTest_VerifyApiProcessedRequestSuccessfully"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name="SASINGLEBROWSECATEGORIES_07">
        <classes>
            <class name="se.spo.api.categoryBrowsingTest.SingleCategoryBrowsingTest">
                <methods>
                    <include name="spotifyApiTest_VerifyApiProcessedRequestWithInvalidAccessToken"></include>
                </methods>
            </class>
        </classes>
    </test>

    <test name="SASINGLEBROWSECATEGORIES_08">
        <classes>
            <class name="se.spo.api.categoryBrowsingTest.SingleCategoryBrowsingTest">
                <methods>
                    <include name="spotifyApiTest_VerifyApiProcessedRequestWithNoTokenProvided"></include>
                </methods>
            </class>
        </classes>
    </test>

</suite>